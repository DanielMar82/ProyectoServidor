<!DOCTYPE html>
<html>
    <head>
        {% block stylesheets %}
            <link href="{{ asset('index.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <title>{% block title %}Tienda - Proyecto{% endblock %}</title>
        <!-- Fuentes/Google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&family=Rubik:wght@300&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    </head>
    <body class="body">
    {% block body %}

        {# MENU #}
        {% include 'menu.html.twig' %}

        <!-- CAMINO DE MIGAS -->
        <div class="caminoMigas">
            <ol>
                <li class="migasAnt"><a href="{{ path('index') }}">Página principal</a></li>
                <p>/</p>
                <li class="migasAct">Tienda</li>
            </ol>
        </div>

        {# ENLACE CARRITO #}
        <div include-html="{{ asset('Components/ShopPage/enlaceCarrito.html') }}"></div>

        {# TIENDA #}
        <div class="cabeceraTienda">
            <label for="" class="buscadorTienda">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Buscar productos" name="barra de búsqueda de productos">
            </label>
            <div class="menuTienda">
                <ul>
                    <li><a href="/tienda">Todos</a></li>
                    <li><a href="/tienda/instrumentos">Instrumentos</a></li>
                    <li><a href="/tienda/accesorios">Accesorios</a></li>
                    <li><a href="/tienda/libros">Libros</a></li>
                    <li><a href="/tienda/sonidoYAudio">Sonido y audio</a></li>
                </ul>
            </div>
        </div>
            <div class="seccionProductos">
                <div class="linea">
                    
                    {% for producto in productos %}
                    <a href="/producto/{{ producto.id }}">
                        <div class="cuadrado">
                            <img src={{ producto.rutaImagen }}>
                            <p>{{ producto.nombre }}</p>
                            <p>{{ producto.precio}}€</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>

            {# PIE DE PÁGINA #}
            {% include 'piePagina.html.twig' %}

        {% endblock %}
        
        {# INCLUDE JS #}
        <script src="{{ asset('include-html.js')}}"></script>
    </body>
</html>