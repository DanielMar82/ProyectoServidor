<!DOCTYPE html>
<html>
    <head>
        <!-- ESTILOS -->
        {% block stylesheets %}
            <link href="{{ asset('index.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <title>{% block title %}Pág Ver lista productos{% endblock %}</title>
    </head>
    <body>
        {% block body %}

            <a href="../index.html">Volver a la página inicial</a>
            <br />
            <br />
            <a href="/carrito/ver">Carrito</a>

            <div class="tienda">
                <h1>Tienda</h1>
                {% for producto in productos %}
                    <img src={{ producto.rutaImagen }}><p>{{ producto.nombre }} - {{ producto.precio}}€</p> 
                    <p>Descripcion: {{producto.descripcion}}</p>
                    <form action={{ path('carrito_agregar') }} method="post">
                        <input type="submit" value="Añadir al carrito">
                        <input type="hidden" name="id_producto" value={{ producto.id }}>
                    </form>
                    <br />
                    <br />
                    <hr>
                    <br />
                {% endfor %}
            <div>

        {% endblock %}
    </body>
</html>