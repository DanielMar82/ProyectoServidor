<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Perfil de usuario - Trabajo Proyecto{% endblock %}</title>
        <!-- Estilos CSS -->
        {% block stylesheets %}
            <link href="{{ asset('index.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <!-- Fuentes/Google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&family=Rubik:wght@300&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    </head>
    <body class="body">

    {% block body %}
        <!-- MENU -->
            {% include 'menu.html.twig' %}
        <!-- CAMINO DE MIGAS -->
        <div class="caminoMigas">
            <ol>
              <li class="migasAnt"><a href="{{ path('index') }}">Página principal</a></li>
              <p>/</p>
              <li class="migasAct">Perfil de usuario</li>
            </ol>
        </div>

        {# PERFIL DE USUARIO #}
            <section class="seccionSesionIni">
            <main>
                <div>
                    <i class="bi bi-person-circle"></i>
                    <h1>{{app.user.nombre}}</h1>
                </div>
                <a href="{{ path('sesion_eliminar') }}"><h1>cerrar sesion</h1></a>
            </main>
            <footer>
                <a href="/canciones/guardadas"><h1>Ver canciones guardadas</h1></a>
                <a href=""><h1>Productos comprados</h1></a>
                <h1>Cambiar contraseña</h1>
                <form class="formCambiarContra" action="{{ path('contraseña_cambiar')}}" method="post">
                    <label>Correo: <input type="text" name="correoUsuario"></label>
                    <label>Contraseña actual: <input type="password" name="actualPassword"></label>
                    <label>Contraseña nueva: <input type="password" name="nuevaPassword"></label>
                    <input type="submit" value="Cambiar contraseña"></input>
                </form>

                <a href="{{ path('verificar_borrado') }}"><h1>Borrar cuenta</h1></a>
            </footer>
        </section>
        
        <!-- PIE DE PÁGINA -->
            {% include 'piePagina.html.twig' %}

    {% endblock %}

        <!-- Funcion Incluir JS -->
        <script src="include-html.js"></script>

    </body>
</html>