<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Perfil de usuario - Trabajo Proyecto{% endblock %}</title>
        <!-- Estilos CSS -->
        {% block stylesheets %}
            <link href="{{ asset('index.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <!-- Fuentes/Google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&family=Rubik:wght@300&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    </head>
    <body class="body">

    {% block body %}
        <!-- MENU -->
            {% include 'menu.html.twig' %}
        <!-- CAMINO DE MIGAS -->
        <div class="caminoMigas">
            <ol>
              <li class="migasAnt"><a href="{{ path('index') }}">Página principal</a></li>
              <p>/</p>
              <li class="migasAct">Perfil de usuario</li>
            </ol>
        </div>

        {# PERFIL DE USUARIO #}
            <section class="seccionSesionIni">
            <main>
                <div>
                    <i class="bi bi-person-circle"></i>
                    <h1>{{app.user.nombre}}</h1>
                </div>
                <a href="{{ path('sesion_eliminar') }}"><h1>cerrar sesion</h1></a>
            </main>
            <footer>
                <a href=""><h1>Ver canciones guardadas</h1></a>
                <a href=""><h1>Productos comprados</h1></a>
                <a id="cambiarContraseña"><h1>Cambiar contraseña</h1></a>

                {# MODAL #}
                <div class="modal fade" id="mi-modal" tabindex="-1" role="dialog" aria-labelledby="miModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="miModalLabel">Título del Modal</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            Contenido del cuerpo del modal.
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Guardar cambios</button>
                        </div>
                        </div>
                    </div>
                </div>


                <a href=""><h1>Borrar cuenta</h1></a>
            </footer>
        </section>
        
        <!-- PIE DE PÁGINA -->
            {% include 'piePagina.html.twig' %}
    {% endblock %}

        <!-- Funcion Incluir JS -->
        <script src="include-html.js"></script>

        <script>
            const elementoClicable = document.getElementById('cambiarContraseña');
            const elementoModal = document.getElementById('mi-modal');

            elementoClicable.addEventListener('click', () => {
                elementoModal.show();
            });
        </script>
    </body>
</html>