<section class="seccionCarrusel">
  <div class="tituloCarrusel">
    <h1>Últimas canciones añadidas</h1>
  </div>
  <section class="apartadoCarrusel">
    <div class="carruseles" id="slider">

        {% for cancion in ultimasTresCanciones %}
            <article class="slider-section">
                <img src={{ cancion.ruta }} alt={{ cancion.nombre }} />
                <span>
                <h1>{{ cancion.nombre }}</h1>
                {% if cancion.instrumento == "GuitarraAcustica" %}
                  <h1>Guitarra acustica</h1>
                {% elseif cancion.instrumento == "GuitarraElectrica" %}
                  <h1>Guitarra electrica</h1>
                {% elseif cancion.instrumento == "Bajo" %}
                  <h1>Bajo</h1>
                {% else %}
                  <h1>Ukelele</h1>
                {% endif %}
                </span>
            </article>
        {% endfor %}
        
    </div>
    <i class="flechIzq bi bi-chevron-left" id="flechIzq"></i>
    <i class="flechDer bi bi-chevron-right" id="flechDer"></i>
  </section>
</section>