<!DOCTYPE html>
<html>
    <head>
        <!-- ESTILOS -->
        {% block stylesheets %}
            <link href="{{ asset('index.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <title>{% block title %}Pag Carrito{% endblock %}</title>
        <!-- Fuentes/Google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&family=Rubik:wght@300&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    </head>
    <body class="body">
        {% block body %}

            {# MENU #}
            {% include 'menu.html.twig' %}

            <!-- CAMINO DE MIGAS -->
            <div class="caminoMigas">
                <ol>
                    <li class="migasAnt"><a href="/index.html">Página principal</a></li>
                    <p>/</p>
                    <li class="migasAnt"><a href="/tienda">Tienda</a></li>
                    <p>/</p>
                    <li class="migasAct">Carrito</li>
                </ol>
            </div>

            <section class="carritoSeccion">
                <main class="listaProductosCar">
                    <h1>Productos en el carrito</h1>
                    <article>

                        {% if carrito is empty %}
                            <h1>Tu carrito está vacío</h1>
                        {% else %}
                            {% for producto in carrito %}
                            
                                <div class="productoEnLista">
                                    <img src={{ producto.imagen }} alt="Producto a comprar">
                                    <p>{{ producto.nombre }}</p>
                                    <div>
                                        <p>{{ producto.precio }}€</p>
                                        <input type="number" name="cantidad" min="1" max="{{ producto.cantidad }}">
                                        <button>Eliminar del carrito</button>
                                    </div>
                                </div>

                            {% endfor %}
                        {% endif %}


                    </article>
                    <div class="precioTotal">
                        <h1>Total :</h1>
                        <h1>00.00€</h1>
                    </div>
                </main>
                <div class="carritoComprar">
                    <form action="{{ path('comprar_carrito') }}">
                        <h1>00.00€</h1>
                        <button type="submit">Comprar</button>
                    </form>
                </div>
            </section>

            {# PIE DE PÁGINA #}
            {% include 'piePagina.html.twig' %}

        {% endblock %}

        {# INCLUDE JS #}
        <script src="{{ asset('include-html.js')}}"></script>
    </body>
</html>